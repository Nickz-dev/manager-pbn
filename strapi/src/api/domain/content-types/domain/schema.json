{
  "kind": "collectionType",
  "collectionName": "domains",
  "info": {
    "singularName": "domain",
    "pluralName": "domains",
    "displayName": "Domain",
    "description": "Domain management for PBN sites"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 255
    },
    "registrar": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "expiresAt": {
      "type": "date",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "active",
        "expired",
        "suspended"
      ],
      "default": "pending",
      "required": true
    },
    "vpsId": {
      "type": "string",
      "maxLength": 100
    },
    "cloudflareAccountId": {
      "type": "string",
      "maxLength": 100
    },
    "dnsRecords": {
      "type": "json"
    },
    "sslEnabled": {
      "type": "boolean",
      "default": false
    },
    "documentId": {
      "type": "string",
      "unique": true,
      "maxLength": 100
    }
  }
} 