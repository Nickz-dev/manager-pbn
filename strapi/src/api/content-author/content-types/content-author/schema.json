{
  "kind": "collectionType",
  "collectionName": "content_authors",
  "info": {
    "singularName": "content-author",
    "pluralName": "content-authors",
    "displayName": "Content Author"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "bio": {
      "type": "text"
    },
    "avatar": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "social_links": {
      "type": "json"
    },
    "specialization": {
      "type": "enumeration",
      "enum": [
        "casino",
        "sports",
        "crypto",
        "finance",
        "general"
      ]
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "experience_years": {
      "type": "integer",
      "default": 0
    },
    "pbn_sites": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::pbn-site.pbn-site",
      "inversedBy": "content_authors"
    },
    "content_categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::content-category.content-category",
      "mappedBy": "content_author"
    },
    "content_authors": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::content-author.content-author",
      "mappedBy": "content_author"
    },
    "content_author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::content-author.content-author",
      "inversedBy": "content_authors"
    }
  }
}
