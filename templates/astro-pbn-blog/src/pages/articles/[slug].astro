---
import siteData from '../../data/site-data.json';

export async function getStaticPaths() {
  const { articles } = siteData;
  
  return articles.map(article => ({
    params: { slug: article.slug },
    props: { article }
  }));
}

const { article } = Astro.props;
const { site } = siteData;
---

<!DOCTYPE html>
<html lang={site.config?.language || 'en'}>
<head>
  <meta charset="utf-8">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <meta name="viewport" content="width=device-width">
  <title>{article.meta_title || article.title}</title>
  <meta name="description" content={article.meta_description || article.excerpt}>
  
  <!-- Google Analytics -->
  {site.analytics?.googleAnalytics && (
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${site.analytics.googleAnalytics}`}></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', '{site.analytics.googleAnalytics}');
    </script>
  )}
  
  <style>
    body {
      font-family: system-ui, sans-serif;
      background: {site.config?.theme === 'dark' ? '#1a1a1a' : '#f9fafb'};
      color: {site.config?.theme === 'dark' ? '#ffffff' : '#222'};
      margin: 0;
      line-height: 1.6;
    }
    
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 20px;
    }
    
    .header {
      background: {site.config?.theme === 'dark' ? '#2a2a2a' : '#ffffff'};
      border-bottom: 1px solid {site.config?.theme === 'dark' ? '#444' : '#e5e7eb'};
      padding: 1rem 0;
      margin-bottom: 2rem;
    }
    
    .header h1 {
      margin: 0;
      font-size: 1.5rem;
      color: {site.config?.theme === 'dark' ? '#ffffff' : '#1f2937'};
    }
    
    .header a {
      color: {site.config?.theme === 'dark' ? '#60a5fa' : '#3b82f6'};
      text-decoration: none;
    }
    
    .header a:hover {
      text-decoration: underline;
    }
    
    .main {
      padding: 2rem 0;
    }
    
    .article-header {
      margin-bottom: 2rem;
    }
    
    .article-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin: 0 0 1rem 0;
      color: {site.config?.theme === 'dark' ? '#ffffff' : '#1f2937'};
      line-height: 1.2;
    }
    
    .article-meta {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
      font-size: 0.875rem;
      color: {site.config?.theme === 'dark' ? '#9ca3af' : '#6b7280'};
    }
    
    .article-image {
      width: 100%;
      max-height: 400px;
      object-fit: cover;
      border-radius: 12px;
      margin-bottom: 2rem;
    }
    
    .article-content {
      background: {site.config?.theme === 'dark' ? '#2a2a2a' : '#ffffff'};
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px {site.config?.theme === 'dark' ? '#00000040' : '#00000010'};
    }
    
    .article-content h2 {
      font-size: 1.5rem;
      margin: 2rem 0 1rem 0;
      color: {site.config?.theme === 'dark' ? '#ffffff' : '#1f2937'};
    }
    
    .article-content h3 {
      font-size: 1.25rem;
      margin: 1.5rem 0 0.75rem 0;
      color: {site.config?.theme === 'dark' ? '#ffffff' : '#1f2937'};
    }
    
    .article-content p {
      margin: 0 0 1rem 0;
      color: {site.config?.theme === 'dark' ? '#d1d5db' : '#374151'};
    }
    
    .article-content ul, .article-content ol {
      margin: 0 0 1rem 0;
      padding-left: 1.5rem;
      color: {site.config?.theme === 'dark' ? '#d1d5db' : '#374151'};
    }
    
    .article-content li {
      margin: 0.25rem 0;
    }
    
    .article-content blockquote {
      border-left: 4px solid {site.config?.theme === 'dark' ? '#60a5fa' : '#3b82f6'};
      padding-left: 1rem;
      margin: 1.5rem 0;
      font-style: italic;
      color: {site.config?.theme === 'dark' ? '#9ca3af' : '#6b7280'};
    }
    
    .categories {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 1rem;
    }
    
    .category-tag {
      background: {site.config?.theme === 'dark' ? '#374151' : '#f3f4f6'};
      color: {site.config?.theme === 'dark' ? '#d1d5db' : '#374151'};
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
      font-size: 0.75rem;
      font-weight: 500;
    }
  </style>
</head>
<body>
  <header class="header">
    <div class="container">
      <h1><a href="/">{site.name}</a></h1>
    </div>
  </header>

  <main class="main">
    <div class="container">
      <article>
        <header class="article-header">
          <h1 class="article-title">{article.title}</h1>
          
          <div class="article-meta">
            <span>By {article.author?.name || 'Anonymous'}</span>
            <span>•</span>
            <span>{new Date(article.publishedAt).toLocaleDateString()}</span>
            {article.categories && article.categories.length > 0 && (
              <>
                <span>•</span>
                <span>Categories:</span>
                <div class="categories">
                  {article.categories.map(category => (
                    <span class="category-tag">{category.name}</span>
                  ))}
                </div>
              </>
            )}
          </div>
          
          {article.featured_image && (
            <img 
              src={article.featured_image} 
              alt={article.title}
              class="article-image"
            />
          )}
        </header>
        
        <div class="article-content">
          {article.excerpt && (
            <p style="font-size: 1.125rem; color: {site.config?.theme === 'dark' ? '#9ca3af' : '#6b7280'}; font-style: italic; margin-bottom: 2rem;">
              {article.excerpt}
            </p>
          )}
          
          <div set:html={article.content} />
        </div>
      </article>
    </div>
  </main>
</body>
</html> 