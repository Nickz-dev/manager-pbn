{
  "name": "astro-pbn-blog",
  "type": "module",
  "version": "1.0.0",
  "description": "Optimized PBN blog template with SEO, performance and security features",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "build:analyze": "astro build --analyze",
    "build:clean": "rm -rf dist && astro build",
    "lighthouse": "lighthouse http://localhost:4321 --output html --output-path ./lighthouse-report.html",
    "test:performance": "npm run build && npm run lighthouse"
  },
  "dependencies": {
    "astro": "^4.0.0",
    "@astrojs/sitemap": "^3.0.0",
    "@astrojs/rss": "^4.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.3.0",
    "@astrojs/tailwind": "^5.0.0",
    "@tailwindcss/typography": "^0.5.10",
    "typescript": "^5.1.6",
    "lighthouse": "^11.0.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "astro",
    "pbn",
    "blog",
    "seo",
    "performance",
    "static-site"
  ],
  "author": "PBN Manager",
  "license": "MIT"
} 